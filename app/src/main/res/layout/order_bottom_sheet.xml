<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:padding="@dimen/dimens_5dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_icon"
        android:elevation="@dimen/dimens_2dp"
        android:layout_marginTop="@dimen/dimens_15dp"
        android:layout_marginEnd="@dimen/dimens_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_30dp"
        android:layout_marginEnd="@dimen/dimens_30dp"
        android:text="@string/loading"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_image" />

    <ImageView
        android:id="@+id/iv_icon_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:src="@drawable/ic_compas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_address_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_3dp"
        android:layout_marginTop="@dimen/dimens_3dp"
        android:text="@string/loading"
        android:textColor="@color/black60"
        android:textSize="@dimen/dimens_12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_description_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_15dp"
        android:layout_marginEnd="@dimen/dimens_15dp"
        android:text="@string/loading"
        android:textColor="@color/black60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_bottom_sheet" />

    <TextView
        android:id="@+id/tv_budget_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_15dp"
        android:text="@string/budget"
        android:textColor="@color/black60"
        android:textSize="@dimen/dimens_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_bottom_sheet" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_4dp"
        android:text="@string/loading"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_budget_bottom" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:layout_marginBottom="@dimen/dimens_20dp"
        android:paddingHorizontal="@dimen/dimens_20dp"
        android:paddingVertical="@dimen/dimens_10dp"
        android:text="@string/calling"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_16sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/dimens_15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price" />

</androidx.constraintlayout.widget.ConstraintLayout>