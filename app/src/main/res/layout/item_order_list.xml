<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimens_15dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="@dimen/dimens_15dp"
    android:layout_marginBottom="@dimen/dimens_5dp"
    android:background="@drawable/shape_white_radius_15dp"
    android:elevation="@dimen/dimens_1dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="@dimen/dimens_39dp"
        android:layout_height="@dimen/dimens_39dp"
        android:layout_marginStart="@dimen/dimens_19dp"
        android:layout_marginTop="@dimen/dimens_15dp"
        app:cardCornerRadius="@dimen/dimens_25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_15dp"
        android:layout_marginEnd="@dimen/dimens_25dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/materialCardView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="@string/loading"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/ic_compas" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_5dp"
            android:layout_weight="1"
            android:text="@string/loading"
            android:textColor="@color/black60"
            android:textSize="@dimen/dimens_12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_description_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_9dp"
        android:layout_marginEnd="@dimen/dimens_15dp"
        android:text="@string/loading"
        android:textColor="@color/black60"
        android:textSize="@dimen/dimens_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView" />

    <TextView
        android:id="@+id/tv_price_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_marginEnd="@dimen/dimens_15dp"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:text="@string/loading"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_order" />

</androidx.constraintlayout.widget.ConstraintLayout>