<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimens_15dp"
    android:layout_marginTop="@dimen/dimens_5dp"
    android:elevation="@dimen/dimens_1dp"
    android:layout_marginEnd="@dimen/dimens_15dp"
    android:layout_marginBottom="@dimen/dimens_5dp"
    android:background="@drawable/shape_advice"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_13dp"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/dimens_15dp"
        android:text="@string/loading"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_14sp" />

    <TextView
        android:id="@+id/tv_description_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_marginEnd="@dimen/dimens_15dp"
        android:layout_marginBottom="@dimen/dimens_13dp"
        android:text="@string/loading"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_12sp" />

</LinearLayout>