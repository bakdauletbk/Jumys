<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backround">
    <TextView
        android:id="@+id/tv_worksheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quest_moderator"
        android:textColor="@color/green"
        android:textSize="@dimen/dimens_19sp"
        android:layout_marginTop="107dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/success"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimens_33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_worksheet"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tv_lorem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@id/iv_success"
        android:gravity="center_horizontal|top"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/dimens_33dp"
        android:layout_marginTop="@dimen/dimens_30dp"
        android:layout_marginBottom="@dimen/dimens_30dp"
        android:paddingVertical="@dimen/dimens_15dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/dimens_15dp" />
    <LinearLayout
        android:id="@+id/loadingViews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#54000000"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white_foreground" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>